<%- include("partials/header") %>

<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" name="postTitle" class="form-control" id="title" autocomplete="off">
    </div>
    <div class="form-group mb-3">
        <label for="text" class="form-label">Post</label>
        <textarea name="postBody" class="form-control" id="text" rows="5"></textarea>
    </div>
    <!-- <input type="text" name="title" autocomplete="off">
    <textarea name="textBody" id="" cols="30" rows="10"></textarea> -->
    <button id="composeSubmitButton" type="submit" class="btn btn-primary mt-2">Publish</button>
</form>

